{
  "compilerOptions": {
    /* Modules and Target */
    "target": "ES2022",                                // Modern output; supports top-level await
    "module": "ES2022",                                // ESM output
    "moduleResolution": "node",                        // Node-style resolution
    "outDir": "dist",                                  // Output directory
    "rootDir": "src",                                  // Input source directory
    "types": [],                                       // Avoid including DOM/lib types

    /* Declarations */
    "declaration": true,                               // Emit .d.ts files
    "declarationMap": true,                            // Source map for types

    /* ESM-Friendly Output */
    "esModuleInterop": true,                           // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Strictness */
    "strict": true,                                    // All strict type-checking options
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Source Maps */
    "sourceMap": true,                                 // Generate .map files

    /* ESM Compatibility */
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Emit Options */
    "emitDeclarationOnly": false,                      // Emit both .js and .d.ts
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "test"]
}
